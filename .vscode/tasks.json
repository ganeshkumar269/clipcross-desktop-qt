{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "QtAppBuild",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label" : "QmakeBuild",
            "command": "qmake",
            "args": ["tryhard.pro"]
        },
        {
            "type": "shell",
            "dependsOn":"QmakeBuild",
            "label": "mingw32make",
            "command": "mingw32-make.exe",
        }
    ],
    "version": "2.0.0"
}